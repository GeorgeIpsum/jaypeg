{
  "name": "tasawur",
  "version": "0.1.0",
  "description": "a jpeg decoder/ encoder built with react and electron",
  "private": true,
  "author": "Ibrahim Saberi <georgeipsum@gmail.com>",
  "main": "public/electron.js",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "electron-is-dev": "^1.1.0",
    "react-dev-utils": "^9.0.1"
  },
  "scripts": {
    "dev": "yarn react-scripts start",
		"build": "react-scripts build",
		"start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
		"pack": "electron-builder --dir",
		"dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^5.0.5",
    "cross-env": "^5.2.0",
    "electron-builder": "^20.44.4",
    "version-bump-prompt": "5.0.3",
    "concurrently": "^4.1.0",
    "react-scripts": "^3.0.1",
    "wait-on": "^3.2.0",
    "electron-devtools-installer": "2.2.4"
  },
  "build": {
    "appId": "com.tasawur",
    "compression": "normal",
    "productName": "tasawur",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg",
        "mas"
      ],
      "publish": {
        "provider": "s3",
        "bucket": "tasawur-releases",
        "path": "releases"
      },
      "category": "public.app-category.utilities"
    },
    "mas": {
			"entitlements": "assets/entitlements.mas.plist",
			"entitlementsInherit": "assets/entitlements.mas.inherit.plist",
			"provisioningProfile": "assets/embedded.provisionprofile"
		},
		"win": {
			"target": "nsis",
			"icon": "assets/icon.ico",
			"publish": {
				"provider": "s3",
				"bucket": "tasawur-releases",
				"path": "releases"
			}
		},
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				"snap",
				"AppImage"
			],
			"description": "Example",
			"category": "Network;Feed",
			"publish": {
				"provider": "s3",
				"bucket": "tasawur-releases",
				"path": "releases"
			}
		}
  }
}
